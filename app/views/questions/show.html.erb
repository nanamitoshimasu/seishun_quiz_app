<div class="container mb-5 pt-5">
  <div class="row">
    <div class="col-md-15 mb-3">
      <%= form_with url: answer_questions_path(id: @current_question_number), method: :post do |f| %>
        <h5><%= @question.content %></h5>
        <br>
        <% @choices.each do |choice| %>
          <button type="submit" class="btn btn-outline-primary" name="answer" value="<%= choice %>">
            <%= choice %>
          </button>
        <% end %>
      <% end %>
    </div>
  </div>
</div>

